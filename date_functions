SELECT EMPNO,ENAME,SAL,HIREDATE,NEXT_DAY(HIREDATE,'MONDAY')AS EXTENDING_DATES FROM EMP1230;
SELECT EMPNO,ENAME,SAL,HIREDATE,NEXT_DAY(HIREDATE,1)AS EXTENDING_DATES FROM EMP1230;
SELECT EMPNO,ENAME,SAL,HIREDATE,LAST_DAY(HIREDATE)AS EXTENDING_DATES FROM EMP1230;
SELECT ENAME,SAL,TO_CHAR(HIREDATE,'DD-MM-YYYY')FROM EMP1230;
SELECT ENAME,SAL,HIREDATE ,TO_CHAR(HIREDATE,'DD-MM-YYYY')AS TOCHAR FROM EMP1230;
SELECT ENAME,SAL,TO_DATE(SAL,'DD-MM-YYYY')FROM EMP1230;
